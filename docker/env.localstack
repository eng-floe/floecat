FLOECAT_FIXTURES_USE_AWS_S3=true
FLOECAT_FIXTURE_AWS_IO_IMPL=org.apache.iceberg.aws.s3.S3FileIO
FLOECAT_FIXTURE_AWS_S3_ENDPOINT=http://localstack:4566
FLOECAT_FIXTURE_AWS_REGION=us-east-1
FLOECAT_FIXTURE_AWS_ACCESS_KEY_ID=test
FLOECAT_FIXTURE_AWS_SECRET_ACCESS_KEY=test
FLOECAT_FIXTURE_AWS_S3_PATH_STYLE=true
