# LocalStack quickstart defaults to DEV auth (no Keycloak dependency).
FLOECAT_AUTH_MODE=dev
FLOECAT_GATEWAY_AUTH_MODE=dev
QUARKUS_OIDC_ENABLED=false
QUARKUS_OIDC_TENANT_ENABLED=false
