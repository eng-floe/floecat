FLOECAT_BLOB_S3_BUCKET=floecat-dev
FLOECAT_STORAGE_AWS_S3_ENDPOINT=http://localstack:4566
FLOECAT_STORAGE_AWS_REGION=us-east-1
FLOECAT_STORAGE_AWS_ACCESS_KEY_ID=test
