<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>ai.floedb.floecat</groupId>
  <artifactId>floecat</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>floecat-root</name>
  <description>Floecat, Root</description>

  <properties>
    <telemetry.docgen.skip>false</telemetry.docgen.skip>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.quarkus>3.31.4</version.quarkus>
    <maven.compiler.source>25</maven.compiler.source>
    <maven.compiler.target>25</maven.compiler.target>
    <proto.compiler.release>25</proto.compiler.release>
    <skipUTs>false</skipUTs>
    <skipITs>false</skipITs>
    <jvm.args>--add-opens java.base/java.lang=ALL-UNNAMED</jvm.args>
    <version.analyticsaccelerator>1.3.1</version.analyticsaccelerator>
    <version.antlr4>4.13.2</version.antlr4>
    <version.archunit>1.1.0</version.archunit>
    <version.arrow>18.3.0</version.arrow>
    <version.assertj>3.27.7</version.assertj>
    <version.aws.sdk>2.39.5</version.aws.sdk>
    <version.bytebuddy.agent>1.15.4</version.bytebuddy.agent>
    <version.caffeine>3.2.3</version.caffeine>
    <version.common.smallrye>2.15.0</version.common.smallrye>
    <version.commons.logging>1.3.5</version.commons.logging>
    <version.datasketches>6.0.0</version.datasketches>
    <version.delta.kernel.api>4.0.0</version.delta.kernel.api>
    <version.google.java.format>1.32.0</version.google.java.format>
    <version.hadoop>3.4.2</version.hadoop>
    <version.iceberg>1.10.0</version.iceberg>
    <version.jakarta.inject>2.0.1</version.jakarta.inject>
    <version.jakarta.validation>3.0.2</version.jakarta.validation>
    <version.java.string.similarity>2.0.0</version.java.string.similarity>
    <version.jackson>2.18.2</version.jackson>
    <version.javax.annotation>1.3.2</version.javax.annotation>
    <version.jboss.logmanager>3.1.2.Final</version.jboss.logmanager>
    <version.jline>3.30.6</version.jline>
    <version.maven>3.9.0</version.maven>
    <version.maven.plugin.tools>3.15.2</version.maven.plugin.tools>
    <version.mockito>5.20.0</version.mockito>
    <version.opentelemetry>1.40.0</version.opentelemetry>
    <version.parquet>1.16.0</version.parquet>
    <version.picocli>4.7.7</version.picocli>
    <version.protobuf>4.32.1</version.protobuf>
    <version.slf4j>2.0.17</version.slf4j>
    <version.slf4j.jboss.logmanager>2.0.2.Final</version.slf4j.jboss.logmanager>
    <version.trino>476</version.trino>
    <version.trino.grpc>1.78.0</version.trino.grpc>
    <version.plugin.antlr4>4.13.2</version.plugin.antlr4>
    <version.plugin.build.helper>3.6.1</version.plugin.build.helper>
    <version.plugin.clean>3.4.0</version.plugin.clean>
    <version.plugin.compiler>3.14.1</version.plugin.compiler>
    <version.plugin.dependency>3.9.0</version.plugin.dependency>
    <version.plugin.exec>3.5.0</version.plugin.exec>
    <version.plugin.failsafe>3.5.4</version.plugin.failsafe>
    <version.plugin.fmt>2.29</version.plugin.fmt>
    <version.plugin.jandex>3.5.2</version.plugin.jandex>
    <version.plugin.jar>3.3.0</version.plugin.jar>
    <version.plugin.maven.plugin>3.15.2</version.plugin.maven.plugin>
    <version.plugin.os>1.7.1</version.plugin.os>
    <version.plugin.protobuf>0.6.1</version.plugin.protobuf>
    <version.plugin.rat>0.17</version.plugin.rat>
    <version.plugin.resources>3.3.1</version.plugin.resources>
    <version.plugin.shade>3.6.1</version.plugin.shade>
    <version.plugin.source>3.4.0</version.plugin.source>
    <version.plugin.surefire>3.5.4</version.plugin.surefire>
    <version.plugin.versions>2.21.0</version.plugin.versions>
    <bytebuddy.agent.path>${project.build.directory}/bytebuddy-agent/byte-buddy-agent-${version.bytebuddy.agent}.jar</bytebuddy.agent.path>
    <test.jvm.args>--add-opens java.base/java.lang=ALL-UNNAMED --add-opens java.base/java.nio=ALL-UNNAMED -Djava.util.logging.manager=org.jboss.logmanager.LogManager -Dcom.google.protobuf.useUnsafe=false -Dio.netty.noUnsafe=true -javaagent:${bytebuddy.agent.path}</test.jvm.args>
    <test.jvm.args.extra></test.jvm.args.extra>
    <argLine></argLine>
  </properties>

  <modules>
      <!-- Core -->
      <module>core/proto</module>
      <module>core/types</module>
      <module>core/catalog</module>
      <module>core/metagraph</module>
      <module>core/connectors/spi</module>
      <module>core/connectors/common</module>
      <module>core/storage-spi</module>
      <module>core/reconciler-spi</module>

      <!-- Connectors -->
      <module>connectors/catalogs/iceberg</module>
      <module>connectors/catalogs/delta</module>

      <!-- Storage -->
      <module>storage/common</module>
      <module>storage/memory</module>
      <module>storage/aws</module>

      <!-- Extensions -->
      <module>extensions/floedb</module>

      <!-- Tools -->
      <module>tools/builtin-validator</module>
      <module>tools/error-messages-generator</module>

      <!-- Telemetry hub -->
      <module>telemetry-hub</module>

      <!-- Service -->
      <module>service</module>

      <!-- CLI -->
      <module>client-cli</module>

      <!-- Other -->
      <module>reconciler</module>
      <module>protocol-gateway</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.quarkus.platform</groupId>
        <artifactId>quarkus-bom</artifactId>
        <version>${version.quarkus}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>software.amazon.awssdk</groupId>
        <artifactId>bom</artifactId>
        <version>${version.aws.sdk}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>software.amazon.s3.analyticsaccelerator</groupId>
        <artifactId>analyticsaccelerator-s3</artifactId>
        <version>${version.analyticsaccelerator}</version>
      </dependency>
      <dependency>
        <groupId>com.google.protobuf</groupId>
        <artifactId>protobuf-java</artifactId>
        <version>${version.protobuf}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.iceberg</groupId>
        <artifactId>iceberg-core</artifactId>
        <version>${version.iceberg}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.iceberg</groupId>
        <artifactId>iceberg-aws</artifactId>
        <version>${version.iceberg}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.hadoop</groupId>
        <artifactId>hadoop-common</artifactId>
        <version>${version.hadoop}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.parquet</groupId>
        <artifactId>parquet-hadoop</artifactId>
        <version>${version.parquet}</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.logmanager</groupId>
        <artifactId>jboss-logmanager</artifactId>
        <version>${version.jboss.logmanager}</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.slf4j</groupId>
        <artifactId>slf4j-jboss-logmanager</artifactId>
        <version>${version.slf4j.jboss.logmanager}</version>
      </dependency>
      <dependency>
        <groupId>org.assertj</groupId>
        <artifactId>assertj-core</artifactId>
        <version>${version.assertj}</version>
      </dependency>
      <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-core</artifactId>
        <version>${version.mockito}</version>
      </dependency>
      <dependency>
        <groupId>io.smallrye.common</groupId>
        <artifactId>smallrye-common-constraint</artifactId>
        <version>${version.common.smallrye}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>net.bytebuddy</groupId>
      <artifactId>byte-buddy-agent</artifactId>
      <version>${version.bytebuddy.agent}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.logmanager</groupId>
      <artifactId>jboss-logmanager</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.slf4j</groupId>
      <artifactId>slf4j-jboss-logmanager</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>with-trino</id>
      <properties>
        <proto.compiler.release>21</proto.compiler.release>
      </properties>
      <modules>
        <module>connectors/clients/trino</module>
      </modules>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>com.spotify.fmt</groupId>
          <artifactId>fmt-maven-plugin</artifactId>
          <version>${version.plugin.fmt}</version>
          <dependencies>
            <dependency>
              <groupId>com.google.googlejavaformat</groupId>
              <artifactId>google-java-format</artifactId>
              <version>${version.google.java.format}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>versions-maven-plugin</artifactId>
          <version>${version.plugin.versions}</version>
        </plugin>
        <plugin>
          <groupId>io.quarkus</groupId>
          <artifactId>quarkus-maven-plugin</artifactId>
          <version>${version.quarkus}</version>
          <extensions>true</extensions>
        </plugin>
        <plugin>
          <groupId>io.smallrye</groupId>
          <artifactId>jandex-maven-plugin</artifactId>
          <version>${version.plugin.jandex}</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${version.plugin.compiler}</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>${version.plugin.dependency}</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <version>${version.plugin.jar}</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>${version.plugin.surefire}</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-failsafe-plugin</artifactId>
          <version>${version.plugin.failsafe}</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>build-helper-maven-plugin</artifactId>
          <version>${version.plugin.build.helper}</version>
        </plugin>
        <plugin>
          <groupId>org.xolstice.maven.plugins</groupId>
          <artifactId>protobuf-maven-plugin</artifactId>
          <version>${version.plugin.protobuf}</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>${version.plugin.dependency}</version>
        <executions>
          <execution>
            <id>copy-bytebuddy-agent</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>net.bytebuddy</groupId>
                  <artifactId>byte-buddy-agent</artifactId>
                  <version>${version.bytebuddy.agent}</version>
                  <outputDirectory>${project.build.directory}/bytebuddy-agent</outputDirectory>
                  <destFileName>byte-buddy-agent-${version.bytebuddy.agent}.jar</destFileName>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${version.plugin.surefire}</version>
        <configuration>
          <argLine>${test.jvm.args} ${test.jvm.args.extra} ${argLine}</argLine>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>${version.plugin.failsafe}</version>
        <configuration>
          <argLine>${test.jvm.args} ${test.jvm.args.extra} ${argLine}</argLine>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.rat</groupId>
        <artifactId>apache-rat-plugin</artifactId>
        <version>${version.plugin.rat}</version>
        <configuration>
          <inputExcludes>
            <inputExclude>**/*.csv</inputExclude>
            <inputExclude>**/*.json</inputExclude>
            <inputExclude>**/*.yml</inputExclude>
            <inputExclude>**/*.avro</inputExclude>
            <inputExclude>**/*.log</inputExclude>
            <inputExclude>log/*</inputExclude>
            <inputExclude>service/log/*</inputExclude>
            <inputExclude>.gitignore</inputExclude>
            <inputExclude>.gitleaks.toml</inputExclude>
            <inputExclude>**/target/**</inputExclude>
            <inputExclude>**/*.md</inputExclude>
            <inputExclude>**/org.mockito.plugins.MockMaker</inputExclude>
          </inputExcludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
